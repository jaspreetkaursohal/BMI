WindowsManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:

<FirstWindow>:
    name: "first"

    GridLayout:
        cols: 1
        Label:
            text:"Welcome to your Body Mass Index calculator"
        GridLayout:
            cols: 2

            Label:
                text: "Enter 'A' for Inches & Pounds OR 'B' for Meters & Kilograms"
            TextInput:
                id: ans
                multiline: False
        Button:
            text: "Next"
            on_press:

                app.root.current="second" if ans.text=='A' or ans.text=='a' else "third" if ans.text=='B' or ans.text=='b' else "first"
                root.manager.transition.direction: "left"

<SecondWindow>:
    name: "second"
    GridLayout:
        cols:1
        GridLayout:
            cols: 2

            Label:
                text:"Please enter your height in inches"

            TextInput:
                id: _height
                multiline:False

            Label:
                text:"Please enter your weight in pounds"

            TextInput:
                id: weight
                multiline:False

        Button:
            text:"Calculate"
            on_press:
                root.calc(_height, weight)
                app.root.current="fourth"
                root.manager.transition.direction: "left"
        Button:
            text:"Go back"
            on_press:
                app.root.current="first"
                root.manager.transition.direction: "right"

<ThirdWindow>:
    name: "third"
    GridLayout:
        cols:1
        GridLayout:
            cols: 2

            Label:
                text:"Please enter your height in meters"

            TextInput:
                id: _height
                multiline:False

            Label:
                text:"Please enter your weight in kilograms"

            TextInput:
                id: weight
                multiline:False

        Button:
            text:"Calculate"
            on_press:
                root.calc(_height,weight)
                app.root.current="fourth"
        Button:
            text:"Go back"
            on_press:
                app.root.current="first"
                root.manager.transition.direction: "right"



<FourthWindow>:
    name: "fourth"
    GridLayout:
        cols:1
        GridLayout:
            cols: 2
            Label:
                text: "Your BMI is:"
            Button:
                text:"Go back"
                on_press:
                    app.root.current="first"
                    root.manager.transition.direction: "right"

